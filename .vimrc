set nu " line numbers on 
set linespace=0 " no space between rows
set showmatch " bracket matching
set scrolljump=5 " number of lines to scroll when cursor moves off screen
set scrolloff=3 " number of lines before and after cursor
set autoindent " indent same level as previous line
set shiftwidth=4 " 4 space indent
set cursorline
set ruler " shows cursor position at all times
set showmode " shows which mode
set ignorecase " ignores case for searches
set spell " spell check
set incsearch " find as you type search
set hlsearch " highlight as you search
set expandtab " tabs are spaces
set tabstop=4 " indentation for every 4 columns
set softtabstop=4 " backspace deletes indent
set background=dark " dark bg
